<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="yoctobyte.yoctomp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomeActivity"
            android:label="Home"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LocalMusicActivity"
            android:label="@string/activity_local_music">
        </activity>
        <activity
            android:name=".AccountActivity"
            android:label="@string/activity_account">
        </activity>
        <activity
            android:name=".SearchActivity"
            android:label="@string/activity_search">
        </activity>
        <activity
            android:name=".PlaylistActivity"
            android:label="@string/activity_playlist">
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings">
        </activity>
    </application>

</manifest>